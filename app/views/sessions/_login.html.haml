-# Reusable login
%p
%table{:width => "97%", :cellspacing => "0", :cellpadding => "5", :border => "0", :align => "center"}
  %tr
    / Login form
    %td{:valign => "top"}
      %table{:width => "100%", :cellspacing => "0", :cellpadding => "0", :border => "0"}
        %tr
          %td{:class => "text12", :valign => "top", :height => "36", :colspan => "2"}
            %span.text12GreenTitle
              ="#{title}"
           
        = render :partial => "shared/login_form"
    
    / Help text
    %td{:width => "48%", :valign => "top"}
      %table{:width => "100%", :cellspacing => "0", :cellpadding => "0", :border => "0"}
        %tr
          %td
            = render :partial => 'shared/login_sidebar'

        / Errors
        %tr
          %td{:class => "text12", :valign => "top", :height => "36", :colspan => "2"}
            = error_messages_for :session 
