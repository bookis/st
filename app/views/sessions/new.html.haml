- # This is for identifying current tab selection in navbar
- @section = 'login'

.st-block
  .yui-gf
    -unless AppConfig.closed_beta_mode
      .yui-u.first.sidebar
        = render :partial => 'shared/login_sidebar'
      .yui-u.main_column
        .box
          %h3
            =:log_in_to_site.l(:site => AppConfig.community_name)
          - form_tag sessions_path, :class => 'MainForm' do
            %label{"for"=>"username"}=:e_mail_address.l
            = text_field_tag 'login', nil, :size => 35
            %label{"for"=>"password"}="#{:password.l}:"
            = password_field_tag 'password', nil, :size => 35
            %fieldset
              %label{"for"=>"remember_me"}
                =:remember_me.l
                = check_box_tag 'remember_me'
            %p
              = submit_tag :log_in.l
