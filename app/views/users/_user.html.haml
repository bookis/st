.row{"class"=>"#{user.vendor ? 'community_pro' : ''} #{user.featured_writer ? 'featured_writer' : ''}"}
  .yui-g
    .yui-g.first
      .yui-u.first
        = link_to image_tag( user.avatar_photo_url(:thumb), :class => "polaroid" ), user_path(user)
      .yui-u
        Goal:
        = "#{AssetType.find(:first, :conditions=> ["id= ?", @usercaseinfo[user.id.to_s]['adc'].asset_type_id]).asset_name}"
        Total:
        = "#{@usercaseinfo[user.id.to_s]['adc'].requested_match_total.format(:no_cents, :html)}"
        %br
        %span{:style=>"color:red"} Need:
        %span{:style=>"color:red"}= "#{@usercaseinfo[user.id.to_s]['adc'].requested_match_left.format(:no_cents, :html)}"
        %br
        = link_to( :donate.l, :controller => 'donations', :action => 'new', :saver_id => user.id )
        %br
        = custom_progress_bar(user.id.to_s+"progbar",@usercaseinfo[user.id.to_s]['percent'],{:show_text=>true, :bar_images=>['progress_bar/percentImage_back1.png','progress_bar/percentImage_back2.png','progress_bar/percentImage_back3.png','progress_bar/percentImage_back4.png'], :width=>120,:height=>10})
    .yui-u
      %h2= user.login.capitalize
      - if @search && @search['description']
        = truncate_words_with_highlight user.description, @search['description']
      - else
        = truncate_words user.description, 18, '...'

      - if current_user && current_user.admin?
        %br
        = link_to( :assume_id.l, assume_user_path(user) )

      = "<p>" + user.tags[0...6].collect{|t| link_to( t.name, tag_url(t), :class => "tag") if t }.join(" ") + "</p>" unless user.tags.empty?

