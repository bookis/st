%table.asset_case
  %tr
    %td.label
      Goal:
    %td
      = adc.asset_type.asset_name
  %tr
    %td
      Total:
    %td
      = adc.total_amt_display
  %tr.remainder
    %td
      Need:
    %td
      = adc.match_left_display
  %tr
    %td{:colspan => "2"}
      = custom_progress_bar("progbar#{user.id}", adc.match_percent, :show_text=>true, :bar_images=>['progress_bar/percentImage_back1.png','progress_bar/percentImage_back2.png','progress_bar/percentImage_back3.png','progress_bar/percentImage_back4.png'], :width=>120, :height=>10)
  %tr
    %td{:colspan => "2"}
      = link_to( :donate.l, :controller => 'donations', :action => 'new', :saver_id => user.id )
