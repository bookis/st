- @meta = {                                       |
  :description => AppConfig.meta_description,     |
  :keywords => AppConfig.meta_keywords,           |
  :robots => AppConfig.robots_meta_list_content   |
  }                                               |

-# Add the Google Webmaster verification string - Home page only
- @meta.merge!("verify-v1" => "qUbzpZfuULUTf2nSxp3he3j3jq8yYp1MhbbCFG+i524=")
  
- # This is for identifying current tab selection in navbar
- @section = 'home'

.content
  = image_tag "#{image_path('image.jpg')}", :usemap => "#banner_map"
  %map{:name => "banner_map"}
    %area{:shape => "rect", :coords =>"683,85,824,127", :href => "#{savers_path}"}
    %area{:shape => "rect", :coords =>"0,0,900,221", :href => "#{how_it_works_path}"}

  .featured-savers
    .heading
      %h3
        = image_tag("#{image_path('titles/featured-savers.gif')}", {:alt => 'Featured Savers'})
    .link
      = link_to "(See All Savers &raquo;)", savers_path
    
  = render(:partial => "savers/mini_saver", :collection => @savers)