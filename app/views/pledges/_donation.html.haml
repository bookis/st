-# Saver Data
%tr
  %td{:valign => "middle", :align => "left"}
    = image_tag( donation.to_user.avatar_photo_url(:thumb) )
  %td{:class => "text12", :valign => "middle", :align => "left"}
    %span.text12GreenBold
      -# Only show a Saver name if it's a User. Only User's have Organizations (for now)
      = donation.to_user.display_name.capitalize if donation.to_user.organization
  %td{:class => "text12", :valign => "middle", :align => "left"}
    -# Show User's organization if it's a user, otherwise show the organization itself (typically ST)
    - if donation.to_user.organization
      = donation.to_user.organization.display_name
    - else
      = donation.to_user.display_name
  %td{:class => "text12", :valign => "middle", :align => "left"}
    = donation.to_user.asset_type
  - form_for donation, :url => { :controller => :pledges, :action => :modify_pledge } do |f|
    %td{:class => "text12", :valign => "middle", :align => "left"}
      - if donation.to_user == Organization.find_savetogether_org
        = f.select :cents, select_savetogether_amounts_cents_values
      - else
        = f.select :cents, select_pledge_amounts_cents_values(donation.to_user.match_amount_left_cents)
      = f.hidden_field :to_user_id
    %td{:class => "text12", :valign => "middle", :align => "center"}
      = image_submit_tag "#{image_path('icons/update.gif')}", :name => "update", :alt => :update.l
      = image_submit_tag "#{image_path('icons/delete.gif')}", :name => "delete", :alt => :remove.l
-# Spacer Row
%tr{:valign => "top", :align => "left"}
  %td{:height => "2", :valign => "middle", :background => "#{image_path('bg/dotted_line.gif')}", :style => "background-repeat: repeat-x;", :colspan => "6"}
    %span{:style => "background-repeat: repeat-x;"}
      %img{:height => "2", :width => "2", :src => "#{image_path('icons/spacer.gif')}"}
