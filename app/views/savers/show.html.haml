- @meta = { :description => "#{@saver.display_name}'s profile on #{AppConfig.community_name}.", :keywords => "#{@saver.login}, #{@saver.tags.join(", ") unless @saver.tags.nil?}", :robots => AppConfig.robots_meta_show_content }
- @section = @saver.eql?(current_user) ? 'my_profile' : 'savers'
- @sidebar_left = true

.yui-g
  .yui-u.first
    .box
      = render :partial => 'users/profile_user_info_sidebar', :object => @saver, :locals => {:user => @saver}

  .yui-u
    - if @saver.description
      #about_me.box
        %h3
          =:about_me.l
        = render :partial => "savers/adc", :object => @saver, :locals => { :saver => @saver }
        %p
          = @saver.description

- unless @donors.size == 0
  .yui-g
  .box.user_list
    %h3= "People who have donated to this Saver"
    = render :partial => "donors/donor", :collection => @donors
