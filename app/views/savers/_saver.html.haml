%div{:class => "saver #{(saver_counter.odd? ? 'right' : '')} #{((@savers.size - 3) < saver_counter ? 'no-border' : '')}"}
  .info
    %p.large-text= "#{saver.matched_amount.format(:no_cents)} (#{saver.requested_match_amount.format(:no_cents)} requested)"
    %table.progress-bar
      %tbody
        %tr
          %td{:class => "progress-pct", :width => "#{(saver.match_percent)*100}%"}
          %td{:class => "remainder-pct", :width => "#{(1.0 - saver.match_percent)*100}%"}
    .relax='&nbsp;'
    - if saver.match_amount_left_cents > 0
      - form_for :donation, :url => { :controller => :pledges, :action => :add_to_pledge } do |f|
        = image_submit_tag 'buttons/match.gif', :alt => 'Match', :class => 'match'
        %p{:class => 'large-text', :width => '50%'}
          = :amount_raised.l :amount => "#{(saver.match_percent*100).round}%"
          = '&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;'
          = f.select :cents, select_pledge_amounts_cents_values
          = f.hidden_field :to_user_id, :value => saver.id
    - else
      = :already_funded.l
    %br
    %p.small-text= truncate_words(saver.description, 20, '...')

  = link_to image_tag( saver.avatar_photo_url(:thumb), :border => "0" ), saver_path(saver)
  %br
  %br
  = saver.display_name