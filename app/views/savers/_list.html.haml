%table{:width => "100%", :cellspacing => "0", :cellpadding => "5", :border => "0"}

  -# Headings
  %tr
    %td{:class => "large-text", :height => "36", :width => "15%", :bgcolor => "#f8faf5"}
      %p.large-text
        = link_to :saver.l, :controller => :savers, :order_by => 'first_name'
    %td{:class => "large-text", :height => "36", :width => "10%", :bgcolor => "#f8faf5"}
      %p.large-text
        = link_to :goal.l, :controller => :savers, :order_by => 'asset_types.asset_name'
    %td{:class => "large-text", :height => "36", :width => "18%", :bgcolor => "#f8faf5"}
      %p.large-text
        = link_to :region.l, :controller => :savers, :order_by => 'metro_areas.name'
        = " / #{:program.l}"
    %td{:class => "large-text", :height => "36", :bgcolor => "#f8faf5"}
      %p.large-text
        ="Saver's Story"
    %td{:class => "large-text", :height => "36", :width => "27%", :bgcolor => "#f8faf5"}
      %p.large-text
        =:donate.l
        
  -# Spacer
  %tr
    %td{:valign => "middle", :align => "left", :colspan => "6"}
      %span{:style => "background-repeat: repeat-x;"}
        %img{:height => "2", :width => "2", :src => "#{image_path('icons/spacer.gif')}"}

  -# Savers
  - unless savers.size == 0
    - savers.each do |saver|
      =render :partial => "savers/list/saver", :locals => {:saver => saver}
  - else
    %tr
      %td{:class => "large-text", :colspan => "5", :align => "center"}
        =:no_savers_matched_search_criteria.l